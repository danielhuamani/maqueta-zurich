
#container_banner
	width 100%
	height 290px
	position relative
	.capa
		position absolute
		left 0
		top 0
		background-image url("/static/img/capa_banner.png")
		width 100%
		height 100%
		z-index 20
	.container
		position relative
		z-index 30
		display flex
		height 100%
		align-items center
		justify-content center
		flex-direction column
		h2
			text-align center
			color c_white
			font-size 45px
			font-family f_lato_bl
			max-width 600px
		.description
			max-width 700px
			text-align center
			margin-top 20px
			font-family f_lato_r
			font-size 16px
			color c_white
.container_banner--large
	height 450px !important
