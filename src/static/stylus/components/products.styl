.container_products
	display flex
	.product--home
		width 335px
	.product
		border 1px solid c_plomo
		margin 0px 25px
		cursor pointer
		&__title
			margin auto
			margin 20px 36px
			text-align center
			padding 10px 20px
			border-bottom 1px solid c_plomo
			h3
				font-size 20px
				font-family f_lato_b
				color c_plomo
				padding 0px 10px 0px 10px
				margin 0

		&__img

			margin 0px 36px 0px 36px
			padding 50px 0px
			border-bottom 1px solid c_plomo
			img
				display block
				width 100%
				height auto
		&__enlace

			text-align center
			position relative

			a
				display inline-block
				width 100%
				padding 40px 0px
				color c_main
				font-size 16px
				font-family f_lato_b
				display flex
				justify-content center
				align-items center
				i
					margin-top -2px
					margin-left 20px
					font-size 24px


				&:before
					content ""
					position absolute
					z-index -1
					top 0
					left 0
					width 0
					bottom 0
					background c_main
					transition .6s ease all

		&:hover
			.product__img
				border-bottom 1px solid c_white
			.product__enlace
				a
					color c_white

					&:before
						width 100%

@media screen and (max-width 1400px)

	.container_products
		display flex
		.product--home
			width 260px
			&__title
				margin 10px 10px
		.product
			border 1px solid c_plomo
			margin 0px 10px
			&__title
				margin 10px 10px
				padding 10px 10px

			&__img
				padding 20px 0px
				margin 0px 20px 0px 20px

			&__enlace

				a
					padding 15px 0px
@media screen and (max-width 1200px)

	.container_products
		.product--home
			width 220px
			margin 0px 6px
			.product__title h3
				font-size 16px
			.product__img
				margin 0px 10px 0px 10px
				padding 10px 0px
			.product__enlace a
				font-size 14px
@media screen and (max-width 1200px)
	.container_products
		justify-content center
@media screen and (max-width 768px)
	.container_products
		flex-wrap wrap
		.product--home
			width 45%
			margin-bottom 15px

@media screen and (max-width 480px)
	.container_products

		.product--home
			width 80%

