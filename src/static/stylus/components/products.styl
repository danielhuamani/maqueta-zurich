.container_products
	display flex
	.product
		border 1px solid c_plomo
		margin 0px 25px
		cursor pointer
		&__title
			margin auto
			margin 20px 36px
			text-align center
			padding 10px 20px
			border-bottom 1px solid c_plomo
			h3
				font-size 20px
				font-family f_lato_b
				color c_plomo
				padding 0px 10px 0px 10px
				margin 0

		&__img

			margin 0px 36px 0px 36px
			padding 50px 0px
			border-bottom 1px solid c_plomo
			img
				display block
				width 100%
				height auto
		&__enlace

			text-align center
			position relative

			a
				display inline-block
				width 100%
				padding 40px 0px
				color c_main
				font-size 16px
				font-family f_lato_b
				display flex
				justify-content center
				align-items center
				i
					margin-top -2px
					margin-left 20px
					font-size 24px
				&:before
					content ""
					position absolute
					z-index -1
					top 0
					left 0
					right 0
					bottom 0

		&:hover
			.product__img
				border-bottom 1px solid transparent
			.product__enlace
				a
					color c_white
					background c_main

@media screen and (max-width 1400px)
	.container_products
		display flex
		.product
			border 1px solid c_plomo
			margin 0px 20px
			&__title
				margin 20px 20px
				padding 10px 10px

			&__img
				padding 20px 0px
				margin 0px 20px 0px 20px

			&__enlace

				a
					padding 15px 0px
