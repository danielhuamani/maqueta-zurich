/*Page HOME*/
.container_slider
    width 100%

    &__list
        &__item
            z-index 1000
            height 360px
            width 100%
            .container
                display flex !important
                align-items center
                height 100%
            .container_slider__description
                max-width 420px
                transform translateY(50)
                transition all 0.6s cubic-bezier(0.68, -0.45, 0.165, 1.35)
                opacity 0
                margin-top 20px
                .container_slider__title
                    font-family f_lato_b
                    font-size 36px
                    color c_white
        &__item.active
            .container_slider__description
                opacity 1
                margin-top 0
                transform translateY(0) !important
    &__btn
        margin-top 40px
        display inline-block
    .bx-wrapper
        position relative
    .bx-pager
        display flex
    .bx-has-pager
        position absolute
        left 0
        right 0
        z-index 100
        max-width 1200px
        width 96%
        margin auto
        bottom 20px
    .bx-pager-item
        margin 0px 3px
    .bx-wrapper .bx-pager.bx-default-pager a
        position: relative
        text-indent: -99999px
        outline: 0
        display: inline-block
        width: 12px
        height: 12px
        border: 1px solid transparent
        border-radius: 50%
        margin: 2px 0px
        background c_white
    .bx-wrapper .bx-pager.bx-default-pager a.active
        background c_celeste_o !important

.home_producto_industria
    margin-top 50px
    .title_block
        margin-bottom 50px
    .producto_industria_slider

        &__cnt_img--bottom
            margin-top 40px
        &__img
            position relative
            display block
            img
                display block
        .capa
            position absolute
            top 0
            left 0
            background-image url("/static/img/capa.png")
            z-index 10
            width 100%
            height 100%
        &__item
            cursor pointer
            .capa--hover
                transition 0.7s ease all
                transform scale(0)
                position absolute
                display flex
                top 0
                bottom 0
                left 0
                right 0
                flex-direction column
                justify-content center
                align-items center
                .d-flex
                    align-items center
                    justify-content center
                    flex-direction column
                .img__hover
                    width 47px
                    height 40px
                    background-size cover
                h4.title_industria__hover
                    font-family f_lato_b
                    font-size 19px

                    margin auto
                    color c_white
                    text-align center
                    margin 5px 10px 0px 10px
                    z-index 1000
                .title_industria__border
                    content ""
                    width 50px
                    height 2px

                    background #fff

                    margin 0
                    margin-top 5px
            h4.title_industria
                font-family f_lato_b
                font-size 19px
                position absolute
                bottom 10px
                left 0
                right 0
                margin auto
                color c_white
                text-align center
                margin 0px 10px
                z-index 20
                transition 0.4s ease all
            &:hover
                h4.title_industria
                    opacity 0
                .capa--hover


                    transform scale(1)
                    background rgba(47, 87, 201, 0.6)
                    z-index 20
                    width 100%
                    height 100%
                    position absolute
                    top 0
                    left 0

    .bx-wrapper
        margin auto
        position relative
        .bx-controls-direction
            .bx-prev
                background-image url("/static/img/flecha_left.png")
                background-size cover
                width 40px
                display block
                height 40px
                position absolute
                left -50px
                top 50%
                transform rotate(180deg)
                transition 0.3s ease all
                &:hover
                    background-image url("/static/img/flecha_left_hover.png")
            .bx-next
                background-image url("/static/img/flecha_left.png")
                width 40px
                display block
                height 40px
                position absolute
                right -50px
                top 50%
                transition 0.3s ease all
                background-size cover
                &:hover
                    background-image url("/static/img/flecha_left_hover.png")
.home_productos_destacados
    display flex
    margin-top 80px
    justify-content center
    &__banner
        width 380px
        background c_footer
        padding 110px 100px 60px 100px
        h3
            font-size 45px
            color c_white
            font-family f_lato_b
        .description
            color c_white
            font-family f_lato_r
            font-size 16px
        .btn--banner
            display inline-block
            margin-top 20px

.home_servicios
    .container
        display flex
        margin-top 120px
        justify-content space-between
    &__content
        max-width 470px
        h3
            color c_main
            font-family f_lato_bl
            font-size 36px
    &__list
        margin-top 25px
        &__item
            margin-top 35px
            border-bottom 1px solid c_plomo
            h4
                font-size 21px
                font-family f_lato_bl
                color c_plomo
        &__description
            font-family f_lato_r
            font-size 16px
            color c_plomo
            margin 35px 0px
    .btn--servicios
        display inline-block
        margin-top 35px
    &__list_img

        figure

            background-repeat no-repeat

        figure:first-child
            padding 35px 40px 0px 0px
            background-image url("/static/img/lineas_2.png")
            background-position top right
            margin-left 140px
        figure:last-child
            margin-top -95px

            padding 0px 0px 35px 40px
            background-image url("/static/img/lineas_2.png")
            background-position bottom left
