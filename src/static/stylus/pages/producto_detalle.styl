.producto_detalle
    padding-top 65px
    padding-bottom 50px
    position relative
    overflow hidden
    &__item

        figure

            img
                display block
                width 100%
                height auto
    .cnt_cotizar--active
        right 0 !important
    &__cotizar--movil
        display none
    .cotizar
        max-width 386px
        position relative
        .close
            cursor pointer
            position absolute
            top -30px
            right 0
            color c_white
            z-index 80
            font-size 32px
    .cnt_cotizar
        transition .6s ease all
        background c_footer
        position absolute
        right -50%

        top 0
        height 100%
        width calc(45% + 20px)
        padding 90px 0px 50px 80px
        box-sizing border-box
        z-index 50
        .description
            font-size 16px
            font-family f_lato_r
            color c_white
            margin 25px 0px

        h3

            margin 0
            font-size 35px
            font-family f_lato_bl
            color white
        form

            margin 0
            .btn--cotizar:hover
                background-position: center right 10px;
            .btn--cotizar
                transition .3s ease all
                display: inline-block;
                padding: 10px 35px;
                background-image: url(../img/flecha_r.png);
                background-repeat: no-repeat;
                background-position: center right 15px;
            .cnt-input
                margin-bottom 20px
                placeholder(c_white, f_lato_r)
                .input
                    input
                        color c_white
                        border-radius 5px
                        height 40px
                        padding-left 10px
                        box-sizing border-box
                        width 100%
                        border none
                        background c_footer
                        border 1px solid c_celeste_o
    .container
        display flex
        .slider
            display flex
            width 65%
            .bx-wrapper
                margin-top 40px
            #bx-pager
                display flex
                flex-direction column
                a.active
                    &:after
                        background transparent !important
                a
                    position relative
                    margin-bottom 40px
                    &:after
                        content ""
                        top 0
                        left 0
                        z-index 10
                        position absolute
                        background rgba(255,255,255,0.5)
                        width 100%
                        height 100%
    &__description
        width 45%
        margin-left 20px
        position relative

        h3.title
            font-size 24px
            font-family f_lato_bl
            color c_main
    &__tabs
        margin-top 30px
        &__content
            margin-top 25px
            .content

                font-size 16px
                font-family f_lato_r
                color c_plomo
                line-height 20px
                p
                    margin 0
                ul
                    margin-left 10px
                    li
                        margin 2px 0px
            .tab_active
                display block !important
            .tab_content
                animation fadeEffect 0.5s
                display none
        &__title
            display flex
            .title_active_last
                &:after
                    left 0
            .title_first
                &:after
                    right 0
            .title_active_last
                color c_celeste
                &:after
                    content ""
                    height 2px
                    width 100%
                    position absolute
                    left 0
                    z-index 20
                    background c_celeste
            .title_active_first
                color c_celeste

                &:after
                    content ""
                    height 2px
                    width 100%
                    position absolute
                    right 0
                    bottom 0px
                    z-index 20
                    background c_celeste

            h3:first-child
                margin-right 15px
            h3

                transition .3s ease all
                cursor pointer
                position relative
                padding 5px 15px
                font-size 18px
                font-family f_lato_b
                color c_plomo
                &:after
                    transition .8s ease all
                    content ""
                    height 2px
                    width 0
                    position absolute
                    bottom 0px
                    z-index 20
                    background c_celeste
    &__cotizar
        margin-top 35px
        a
            display inline-block
            padding 10px 35px
            background-image url("../img/flecha_r.png")
            background-repeat no-repeat
            background-position center right 15px
    &__descarga
        margin-top 30px
        display flex
        a:first-child
            margin-right 30px
        a
            display flex
            max-width 160px
            font-size 18px
            font-family f_lato_b
            color c_plomo
            i
                font-size 40px
                color c_main
                margin-right 15px
.producto_detalle_relacionados
    padding-top 50px
    padding-bottom 50px

    background c_bac

    .title_block
        h2
            font-size 24px
            color c_main

    .container_products
        margin-top 25px
        .product
            background c_white
            margin 0px
            width 270px !important
        .product__title
            margin-top 10px
            margin-bottom 0
            h3
                font-size 16px
        .product__enlace

            a
                position relative
                z-index 2
                font-size 13px
    .bx-wrapper
        margin auto
        position relative
        .bx-viewport
            height 370px !important
        .bx-controls-direction
            .bx-prev
                background-image url("../img/flecha_left.png")
                background-size cover
                width 40px
                display block
                height 40px
                position absolute
                left -50px
                top 50%
                transform rotate(180deg)
                transition 0.3s ease all
                &:hover
                    background-image url("../img/flecha_left_hover.png")
            .bx-next
                background-image url("../img/flecha_left.png")
                width 40px
                display block
                height 40px
                position absolute
                right -50px
                top 50%
                transition 0.3s ease all
                background-size cover
                &:hover
                    background-image url("../img/flecha_left_hover.png")
@keyframes fadeEffect {
    from {opacity: 0;}
    to {opacity: 1;}
}
