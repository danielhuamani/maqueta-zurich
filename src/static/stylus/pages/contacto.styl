.contacto
	.container
		display flex
	&__datos_img
		width 40%
		position relative
		margin-right 70px
		margin-top -50px
		z-index 140

	&__datos
		background c_main
		padding 60px
		padding-bottom 120px

		h3
			color c_white
			font-family f_lato_bl
			font-size 24px
			margin 0px
			text-align left
		ul
			margin-top 30px
			li, a
				font-size 16px
				font-family f_roboto_r
				color c_white
	&__cnt_formulario
		margin-top 50px
		width 60%
		h3
			text-align center
			font-size 24px
			font-family f_lato_bl
			color c_main
			text-align left
		form
			overflow hidden
			margin-top 30px
			max-width 520px
			margin-left 0
			.btn--contacto
				padding 10px 35px
				text-align right
				float right
			.cnt-input
				display flex
				.input:first-child
					margin-left 0
				.input
					width 50%
					margin 7px 5px
					placeholder(c_plomo, f_lato_r)
					input, select, textarea
						width 100%
						box-sizing border-box
						height 40px
						padding 5px 10px
						border 1px solid #D5D5D5
						color c_plomo
						border-radius 8px
						font-family f_lato_r
						font-size 14px
					textarea
						width 100%
						height 100px
				.input--area
					width 100%
@media screen and (max-width 768px)
	.container--small
		flex-direction column
		margin-bottom 20px
		margin-top 20px
	.contacto__datos
		background transparent
		color c_main
		padding 20px
		display flex
		flex-wrap wrap
		justify-content space-between
		flex-direction column
		align-items center
		h3
			width 100%
			color c_main
			margin-bottom 20px
			text-align center
		ul

			margin 0
			margin-bottom 10px
			max-width 300px
			li
				color c_main
				a
					color c_main
	.contacto__datos_img
		margin-top 0px
		margin-right 0
		width 100%
		figure
			display none
	.contacto__cnt_formulario
		width 100%
		form
			max-width 100%

	.contacto__cnt_formulario form .cnt-input
		flex-wrap wrap
		.input
			width 100%
			margin 5px 0px
	.contacto__cnt_formulario h3
		text-align center
