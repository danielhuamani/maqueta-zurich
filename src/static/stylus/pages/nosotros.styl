.nosotros_nuestra_historia
    margin-top 70px
    .container
        display flex
        justify-content space-between
        .nuestra_historia_content
            max-width 470px
            h3
                color c_main
                font-size 30px
                font-family f_lato_bl
            .nuestra_historia_description
                margin-top 40px
                color c_plomo
                font-size 16px
                font-family f_lato_r
                text-align justify
        .nuestra_historia_image
            figure
                background-repeat no-repeat
            figure:first-child
                padding 35px 40px 0px 0px
                background-image url("/static/img/lineas.png")
                background-position top right
                margin-left 140px
            figure:last-child
                margin-top -115px

                padding 0px 0px 35px 40px
                background-image url("/static/img/lineas.png")
                background-position bottom left
