@import "../base/variables"

.header
	height 100px
	box-shadow 0px 1px 1px #f1f1f1
	&__container
		height 100%
		display flex
		justify-content space-between
		align-items center
	&__logo
		img
			display block
	&__menu
		ul
			display flex
			li
				margin 0px 30px
				a
					color c_plomo
					font-family f_lato_b
					font-size 16px
					transition .3s ease all
					border-bottom 2px solid transparent
					padding-bottom 3px
					&:hover
						border-bottom 2px solid c_main

.footer
	padding-top 80px
	margin-top 20px
	background c_footer
	&__top
		padding-bottom 60px
		&__list
			display flex
			justify-content space-between
		&__title
			font-family f_roboto_bl
			font-size 18px
			color c_white
			margin-bottom 15px
	&__datos
		display flex
		flex-direction column
		width 200px
		&__description
			p
				margin-bottom 2px
				font-size 14px
				font-family f_roboto_r
				color c_white
		&__title_redes
			font-size 14px
			font-family f_roboto_bl
			color c_white
			margin-top 15px

		&__list_redes
			display flex

			margin 0
			margin-top 10px
			li
				margin 0
				margin-right 8px
				a
					color c_footer
					background c_white
					padding 6px
					border-radius 50%
					transition 0.3s ease all
					&:hover
						background c_celeste
						color c_white
